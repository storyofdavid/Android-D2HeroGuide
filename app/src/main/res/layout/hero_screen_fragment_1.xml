                        android:layout_weight="1"
                        android:background="#ff252e39"
                        android:padding="5dp"
                        app:srcCompat="@drawable/axe_skill_3" />

                    <ImageView
                        android:id="@+id/heroSkill2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
