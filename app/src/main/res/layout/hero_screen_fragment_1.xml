                        android:alpha=".3"
                        android:background="#ff252e39"
                        android:padding="5dp"
                        app:srcCompat="@drawable/axe_skill_3" />

                    <ImageView
                        android:id="@+id/heroSkill14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha=".3"
                        android:background="#ff252e39"
                        android:padding="5dp"
                        app:srcCompat="@drawable/axe_skill_3" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/skillName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff252e39"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="Hoof Stomp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

            <TextView
                android:id="@+id/skillDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff252e39"
                android:padding="5dp"
                android:text="TextView"
                android:textColor="@android:color/darker_gray"
                tools:text="ABILITY: Unit Target \nAFFECTS: Heroes \nDamage Type: Magical \nPIERCES SPELL IMMUNITY: Yes " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

            <TextView
                android:id="@+id/skillText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff252e39"
                android:padding="5dp"
                android:text=""
                android:textColor="@android:color/darker_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

            <TextView
                android:id="@+id/scepterSkillText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ff252e39"
                android:padding="5dp"
                android:textColor="#5ed266" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

            <LinearLayout
                android:id="@+id/skillCooldowns"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff252e39"
                android:orientation="horizontal"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/coolDownImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/cooldown" />

                <TextView
                    android:id="@+id/coolDownText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="60/50/40/30"
                    android:textColor="@android:color/background_light" />

                <ImageView
                    android:id="@+id/manaCostImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/manacost" />

                <TextView
                    android:id="@+id/manaCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100/120/130/140"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#ff252e39"
                android:layout_height="200px"
                android:id="@+id/hasToMatchAdsHeight" />

