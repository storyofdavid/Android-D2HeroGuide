            </LinearLayout>

            <LinearLayout
                android:id="@+id/aghanims_shard_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff252e39"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/aghanims_shard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:src="@drawable/item_aghanims_shard" />

                <TextView
                    android:id="@+id/aghanims_shard_ability"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="Aghanim's Shard Ability"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <TextView
                android:id="@+id/aghanims_shard_ability_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#ff252e39"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="Aghanim's Shard Ability Text goes here"
                android:textAlignment="gravity"
                android:textColor="@android:color/darker_gray" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

