                    <ImageView
                        android:id="@+id/startingItems4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/startingItemsLine2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/startingItems5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />

                    <ImageView
                        android:id="@+id/startingItems6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />

                    <ImageView
                        android:id="@+id/startingItems7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />

                    <ImageView
                        android:id="@+id/startingItems8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/earlyGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
