                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_eye_of_skadai" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/popularItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtPopularItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff252e39"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:text="Popular Items"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />

                <View
                    android:id="@+id/popularItemsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#182128" />

                <LinearLayout
                    android:id="@+id/popularItemsLine1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
