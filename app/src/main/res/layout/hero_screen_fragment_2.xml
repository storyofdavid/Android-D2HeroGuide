                    android:id="@+id/txtStartingItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff252e39"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:text="Starting Items"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />

                <View
                    android:id="@+id/startingItemsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#182128" />

                <LinearLayout
                    android:id="@+id/startingItemsLine1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/startingItems1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />

                    <ImageView
                        android:id="@+id/startingItems2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/item_clarity" />

                    <ImageView
                        android:id="@+id/startingItems3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
