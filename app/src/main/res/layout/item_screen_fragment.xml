<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <!-- Footer aligned to bottom -->

    <!-- Scrollable Content below header and above footer -->

    <ScrollView
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ff252e39">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ff252e39"
                android:padding="2dp"
                android:text="Animal Courrier"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="35sp" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#182128" />

            <ImageView
                android:id="@+id/itemIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ff252e39"
                android:padding="20dp"
                android:src="@drawable/item_tango" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff252e39"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/itemGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:src="@drawable/gold" />

                <TextView
                    android:id="@+id/goldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="150"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff252e39"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp">

                <ImageView
                    android:id="@+id/cooldown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/cooldown" />


                <TextView
                    android:id="@+id/cooldownText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="N/A"
                    android:textColor="@android:color/background_light" />

                <ImageView
                    android:id="@+id/manaCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:src="@drawable/manacost" />

                <TextView
                    android:id="@+id/manaCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="N/A"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#182128" />

                <TextView
                    android:id="@+id/itemDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#ff252e39"
                    android:padding="15dp"
                    android:text="TextView"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Summons an animal courrier to use" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAbility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#182128" />

                <TextView
                    android:id="@+id/itemAbility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ff252e39"
                    android:padding="15dp"
                    android:text="TextView"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Summons an animal courrier to use" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:id="@+id/itemBuildsInto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/itemBuildInto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            ads:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildInto7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            ads:srcCompat="@drawable/axe_skill_3" />

                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/upArrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/item_up_arrow" />

                <ImageView
                    android:id="@+id/itemChosen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:src="@drawable/item_tango" />

                <ImageView
                    android:id="@+id/downArrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/item_down_arrow" />

                <HorizontalScrollView
                    android:id="@+id/itemBuildsFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/itemBuildFrom1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildFrom2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildFrom3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildFrom4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildFrom5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            app:srcCompat="@drawable/axe_skill_3" />

                        <ImageView
                            android:id="@+id/itemBuildFrom6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary"
                            android:padding="5dp"
                            ads:srcCompat="@drawable/axe_skill_3" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <View
                android:id="@+id/hasToMatchAdsHeight"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:background="#ff252e39" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_alignParentBottom="true"
        android:background="#ff252e39"
        android:gravity="center">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/d2heroguide_banner_ad_unit_id"></com.google.android.gms.ads.AdView>

    </RelativeLayout>

</RelativeLayout>